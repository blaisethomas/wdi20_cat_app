<%= form_for @cat do |f| %>

<div class="jumbotron">
	<div class="row">
		<%= f.label :name, :class => "col-xs-2"%>
		<%= f.text_field :name, :class => "col-xs-10" %>
	</div>

	<div class="row">
		<%= f.label :hair_color, :class => "col-xs-2" %>
		<%= f.text_field :hair_color, :class => "col-xs-10"  %>
	</div>

	<div class="row">
		<%= f.label :breed, :class => "col-xs-2" %>
		<%= f.text_field :breed, :class => "col-xs-10" %>
	</div>

	<div class="row">
		<%= f.label :age, :class => "col-xs-2" %>
		<%= f.number_field :age, in: 0..100, step: 0.5, :class => "col-xs-10"  %>
	</div>

	<div class="row">
		<%= f.label :gender, :class => "col-xs-2" %>
		<%= f.select :gender, options_for_select([["Select One", ""], "boy", "girl"]), :class => "col-xs-10"  %>
	</div>

	<div>
		<%= f.submit "Add a Kitty", :class => "btn btn-success" %>
	</div>
</div>

<% end %>